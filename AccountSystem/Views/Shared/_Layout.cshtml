@using Microsoft.AspNet.Identity;

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Dashboard</title>

    <!-- Fontfaces CSS-->
    <link href="~/Content/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/Content/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/Content/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/Content/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="~/Content/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href="~/Content/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/Content/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/Content/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/Content/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/Content/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/Content/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/Content/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/Content/css/theme.css" rel="stylesheet" media="all">

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" href="~/Content/index.html">
                            <img src="~/Content/images/icon/logo.png" alt="CoolAdmin" />
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                        <li class="has-sub">
                            <a class="js-arrow" href="~/Content/#">
                                <i class="fas fa-tachometer-alt"></i>Inicio
                            </a>
                            <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                                <li>
                                    <a href="~/Content/index.html">Dashboard 1</a>
                                </li>
                                <li>
                                    <a href="~/Content/index2.html">Dashboard 2</a>
                                </li>
                                <li>
                                    <a href="~/Content/index3.html">Dashboard 3</a>
                                </li>
                                <li>
                                    <a href="~/Content/index4.html">Dashboard 4</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="~/Content/chart.html">
                                <i class="fas fa-chart-bar"></i>nada
                            </a>
                        </li>
                        <li>
                            <a href="~/Content/table.html">
                                <i class="fas fa-table"></i>Tables
                            </a>
                        </li>
                        <li>
                            <a href="~/Content/form.html">
                                <i class="far fa-check-square"></i>Forms
                            </a>
                        </li>
                        <li>
                            <a href="~/Content/#">
                                <i class="fas fa-calendar-alt"></i>Calendar
                            </a>
                        </li>
                        <li>
                            <a href="~/Content/map.html">
                                <i class="fas fa-map-marker-alt"></i>Maps
                            </a>
                        </li>
                        <li class="has-sub">
                            <a class="js-arrow" href="~/Content/#">
                                <i class="fas fa-copy"></i>Pages
                            </a>
                            <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                                <li>
                                    <a href="~/Content/login.html">Login</a>
                                </li>
                                <li>
                                    <a href="~/Content/register.html">Register</a>
                                </li>
                                <li>
                                    <a href="~/Content/forget-pass.html">Forget Password</a>
                                </li>
                            </ul>
                        </li>
                        <li class="has-sub">
                            <a class="js-arrow" href="~/Content/#">
                                <i class="fas fa-desktop"></i>UI Elements
                            </a>
                            <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                                <li>
                                    <a href="~/Content/button.html">Button</a>
                                </li>
                                <li>
                                    <a href="~/Content/badge.html">Badges</a>
                                </li>
                                <li>
                                    <a href="~/Content/tab.html">Tabs</a>
                                </li>
                                <li>
                                    <a href="~/Content/card.html">Cards</a>
                                </li>
                                <li>
                                    <a href="~/Content/alert.html">Alerts</a>
                                </li>
                                <li>
                                    <a href="~/Content/progress-bar.html">Progress Bars</a>
                                </li>
                                <li>
                                    <a href="~/Content/modal.html">Modals</a>
                                </li>
                                <li>
                                    <a href="~/Content/switch.html">Switchs</a>
                                </li>
                                <li>
                                    <a href="~/Content/grid.html">Grids</a>
                                </li>
                                <li>
                                    <a href="~/Content/fontawesome.html">Fontawesome Icon</a>
                                </li>
                                <li>
                                    <a href="~/Content/typo.html">Typography</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- END HEADER MOBILE-->
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo">
                @{
                    string title = User.IsInRole("Admin") ? "Panel Administrador" : "Panel Usuario";
                }
                @title
            </div>
            <div class="menu-sidebar__content js-scrollbar1">
                <nav class="navbar-sidebar">
                    <ul class="list-unstyled navbar__list">

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="active has-sub">
                                <a class="js-arrow" href="@Url.Action("Index", "Home")">
                                    <i class="fas fa-home"></i>Inicio
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Client")">
                                    <i class="fas fa-user"></i>Usuarios
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "AccountClient")">
                                    <i class="fas fa-credit-card"></i>Cuentas
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("AllRequests", "Request")">
                                    <i class="fas fa-hand-paper"></i>Solicitudes
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fas fa-calendar-alt"></i>Reportes
                                </a>
                            </li>
                        }
                        else
                        {

                            <li class="active has-sub">
                                <a class="js-arrow" href="@Url.Action("Index", "Home")">
                                    <i class="fas fa-home"></i>Inicio
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("MyRequests", "Request",new { id = User.Identity.GetUserId()})">
                                    <i class="fas fa-hand-paper"></i>Mis solicitudes
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("MyRequests", "Request")">
                                    <i class="fas fa-credit-card"></i>Estado de Cuenta
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </aside>
        <header class="header-desktop">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="header-wrap">
                        <form class="form-header" action="" method="POST">
                            <input class="au-input au-input--xl" type="text" name="search" placeholder="Search for datas &amp; reports..." />
                            <button class="au-btn--submit" type="submit">
                                <i class="zmdi zmdi-search"></i>
                            </button>
                        </form>
                        <div class="header-button">
                            <div class="noti-wrap">
                                <div class="noti__item js-item-menu">
                                    <i class="zmdi zmdi-notifications"></i>
                                    <span class="quantity">3</span>
                                    <div class="notifi-dropdown js-dropdown">
                                        <div class="notifi__title">
                                            <p>You have 3 Notifications</p>
                                        </div>
                                        <div class="notifi__item">
                                            <div class="bg-c1 img-cir img-40">
                                                <i class="zmdi zmdi-email-open"></i>
                                            </div>
                                            <div class="content">
                                                <p>You got a email notification</p>
                                                <span class="date">April 12, 2018 06:50</span>
                                            </div>
                                        </div>
                                        <div class="notifi__item">
                                            <div class="bg-c2 img-cir img-40">
                                                <i class="zmdi zmdi-account-box"></i>
                                            </div>
                                            <div class="content">
                                                <p>Your account has been blocked</p>
                                                <span class="date">April 12, 2018 06:50</span>
                                            </div>
                                        </div>
                                        <div class="notifi__item">
                                            <div class="bg-c3 img-cir img-40">
                                                <i class="zmdi zmdi-file-text"></i>
                                            </div>
                                            <div class="content">
                                                <p>You got a new file</p>
                                                <span class="date">April 12, 2018 06:50</span>
                                            </div>
                                        </div>
                                        <div class="notifi__footer">
                                            <a href="~/Content/#">All notifications</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="account-wrap">
                                <div class="account-item clearfix js-item-menu">
                                    <div class="image">
                                        <img src="~/Content/images/icon/avatar-01.jpg" alt="John Doe" />
                                    </div>
                                    <div class="content">
                                        <a class="js-acc-btn" href="~/Content/#">@User.Identity.Name</a>
                                    </div>
                                    <div class="account-dropdown js-dropdown">
                                        @Html.Partial("_LoginPartial")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()
        <div class="row">
            <div class="col-md-12">
                <div class="copyright">
                    <p>Copyright © 2018 Colorlib. All rights reserved. Template by <a href="~/Content/https://colorlib.com">Colorlib</a>.</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Jquery JS-->
    <script src="~/Content/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/Content/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/Content/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/Content/vendor/slick/slick.min.js">
    </script>
    <script src="~/Content/vendor/wow/wow.min.js"></script>
    <script src="~/Content/vendor/animsition/animsition.min.js"></script>
    <script src="~/Content/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="~/Content/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/Content/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="~/Content/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/Content/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/Content/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/Content/vendor/select2/select2.min.js">
    </script>
    <script src="~/Scripts/sweetalert.min.js"></script>

    <!-- Main JS-->
    <script src="~/Content/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>