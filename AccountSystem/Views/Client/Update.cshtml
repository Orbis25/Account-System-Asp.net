@model Model.Client


@{
    ViewBag.Title = "Actualizar";
}

<h2 class="mt-5">Actualizar El Cliente @Model.Name @Model.LastName </h2>

<hr />

<div class="container">
    <div class="row justify-content-start">
        @Html.AntiForgeryToken()
        <div class="col-6">
            <form action="/Client/Update" id="form" class="form-group" method="post">
                <div>
                    <label for="Name"><span class="text-danger"> * </span>Nombre</label>
                    <input type="text" class="form-control " name="Name" value="@Model.Name" required />
                </div>
                <div>
                    <label for="LastName"><span class="text-danger"> * </span>Apellido</label>
                    <input type="text" class="form-control" name="LastName" value="@Model.LastName" required />
                </div>
                <div>
                    <label for="PhoneNumber"><span class="text-danger"> * </span>Telefono / Celular</label>
                    <input type="text" class="form-control" name="PhoneNumber" id="PhoneNumber" value="@Model.PhoneNumber" required />
                    <span class="text-danger" id="MinNumber"></span>
                </div>
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-info" })
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/Forms/Main.js"></script>
<script src="~/Scripts/sweetalert.min.js"></script>

@if (ViewBag.response == 6)
{
    <script>
        swal("Ups Ha ocurrido un error!", "Quizas sus Credenciales estan mal colocados porfavor revise o algun campo excedio el limite de caracteres", "error");
    </script>
}



