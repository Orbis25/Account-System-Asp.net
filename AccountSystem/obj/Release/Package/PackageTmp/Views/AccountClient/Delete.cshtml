@{ 
    ViewBag.Title = "Eliminar";
}

@model Model.ViewModels.AddAccountViewModel

<h1 class=" text-center mt-5"><i class="far fa-sad-tear"></i></h1>
<hr />
<h2 class="text-center ">Seguro que desea eliminar a @ViewBag.PersonName</h2>
<div class="row justify-content-center">
    <div class="col-">
        @Html.ActionLink("Confirmar", "SuccessDelete", new { id = Model.Id }, new { @class = "btn btn-success" })
        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>




